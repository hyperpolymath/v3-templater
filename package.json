{
  "name": "v3-templater",
  "version": "1.0.0",
  "description": "A modern, secure, and high-performance templating engine built with ReScript and Deno",
  "type": "module",
  "main": "src/index.js",
  "exports": {
    ".": "./src/index.js"
  },
  "scripts": {
    "build": "rescript build",
    "build:watch": "rescript build -w",
    "clean": "rescript clean",
    "test": "deno task test",
    "test:watch": "deno task test:watch",
    "test:coverage": "deno task coverage",
    "lint": "deno task lint",
    "format": "deno task fmt",
    "check": "deno task check",
    "bench": "deno task bench",
    "dev": "rescript build -w & deno run --watch --allow-read src/index.js",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "template",
    "templating",
    "template-engine",
    "rescript",
    "deno",
    "html",
    "mustache",
    "handlebars",
    "ejs",
    "view",
    "rendering",
    "functional",
    "type-safe"
  ],
  "author": "v3-templater contributors",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.19.27",
    "@types/jest": "^29.5.14",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.50.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.4.6",
    "typescript": "^5.9.3",
    "prettier": "^3.7.4"
  },
  "dependencies": {
    "he": "^1.2.0"
  },
  "dependencies": {},
  "repository": {
    "type": "git",
    "url": "https://github.com/Hyperpolymath/v3-templater.git"
  },
  "engines": {
    "deno": ">=1.38.0"
  },
  "files": [
    "src/**/*.res",
    "src/**/*.bs.js",
    "src/*.js",
    "bsconfig.json",
    "deno.json",
    "import_map.json",
    "README.md",
    "LICENSE"
  ]
}
